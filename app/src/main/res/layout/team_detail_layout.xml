<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="#fff"
    android:background="@drawable/khungvuong_trang"
    tools:context=".TeamDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Tên Đội: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtTitle_teamDetail"
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Loaning..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <ImageView
            android:scaleType="centerCrop"
            android:background="@drawable/loading_image"
            android:id="@+id/imageView_teamDetail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Đội Trưởng: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:autoLink="all"
                android:id="@+id/txtDoiTruong_teamDetail"
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Loaning..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Địa Chỉ: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:autoLink="all"
                android:id="@+id/txtDescription_teamDetail"
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Loaning..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Số Điện Thoại:  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:autoLink="all"
                android:id="@+id/txtSoDienThoai_teamDetail"
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Loaning..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Ngày Thành Lập:  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:autoLink="all"
                android:id="@+id/txtNgayThanhLap_teamDetail"
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Loaning..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Thành Viên"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <Button
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Bắt Cặp"
                android:layout_width="150dp"
                android:layout_height="50dp"/>
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>