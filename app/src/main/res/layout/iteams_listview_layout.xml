<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@drawable/backgroud_list"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgCircle_iteams_listview"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bacgournd_table" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/my_khungvuong_color_alpha_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorWhile"

                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTenDoi"/>
                    <TextView
                        android:id="@+id/txtTenDoi_iteams_listivew"
                        android:textColor="@color/colorWhile"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTenDoiInput"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="center|bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:gravity="left"
                    android:background="@drawable/my_khungvuong_color_alpha_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorWhile"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtDiaChi"/>
                    <TextView
                        android:id="@+id/txtDiaChi_iteams_listivew"
                        android:textColor="@color/colorWhile"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtDiaChiInput"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnBatCap_iteams_listivew"
                         android:background="@drawable/my_radiuskhungvuong_button_three"
                        android:textColor="@color/colorWhile"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/btnBatCap"/>
                    <Button
                        android:id="@+id/btnChiTiet_iteams_listivew"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/my_radiuskhungvuong_button_three"
                        android:textColor="@color/colorWhile"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/btnChiTiet"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    
</LinearLayout>