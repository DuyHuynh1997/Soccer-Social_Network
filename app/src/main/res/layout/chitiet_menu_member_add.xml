<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/khungvuong_background"

    >


    <LinearLayout
        android:background="@drawable/backgound_tree"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/khungvuong_color_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:textColor="@color/colorWhile"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Họ Tên"/>

            <TextView
                android:textColor="@color/colorWhile"
                android:id="@+id/edtTenMember_addmemberChiTiet"
                android:textSize="20sp"
                android:background="@drawable/khungvuong_no_color"
                android:textColorHint="@color/colorWhile"
                android:hint="Nhập Họ Và Tên"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:id="@+id/imageView_addMemberChiTiet"
                android:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>




        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textSize="10dp"
                android:id="@+id/btnViTriTeam_addmember"
                android:background="@drawable/khungvuong_color_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Vị Trí Team"/>

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/khungvuong_color_alpha"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorWhile"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Vị Trí Chính:"/>

                    <TextView
                        android:textColor="@color/colorWhile"
                        android:id="@+id/edtViTriChinh_addmemberChiTiet"
                        android:textSize="20sp"
                        android:textColorHint="@color/colorWhile"
                        android:gravity="center"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/khungvuong_no_color"
                        android:hint="Nhập Vị Trí Trong Đội"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/khungvuong_color_alpha"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:textColor="@color/colorWhile"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Vị Trí Dự Bị:"/>

                    <TextView
                        android:id="@+id/edtViTriDuBi_addmemberChiTiet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15sp"
                        android:layout_weight="2"
                        android:background="@drawable/khungvuong_no_color"
                        android:gravity="center"
                        android:hint="Nhập Vị Trí Trong Đội"
                        android:textColor="@color/colorWhile"
                        android:textColorHint="@color/colorWhile"
                        android:textSize="20sp" />

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/khungvuong_color_alpha"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:textColor="@color/colorWhile"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Vị Trí Khác:"/>

                    <TextView
                        android:textColor="@color/colorWhile"
                        android:id="@+id/edtViTriKhac_addmemberChiTiet"
                        android:textSize="20sp"
                        android:textColorHint="@color/colorWhile"
                        android:gravity="center"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/khungvuong_no_color"
                        android:hint="Nhập Vị Trí Trong Đội"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />

                </LinearLayout>





            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:background="@drawable/khungvuong_color_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:textSize="10dp"
                android:id="@+id/btnThongTinCauThu_addmember"
                android:background="@drawable/khungvuong_color_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Thông Tin Cầu Thủ"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhile"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Ngày Vào Đội:"/>

                <TextView
                    android:id="@+id/txtNgayVaoDoi_addmemberChiTiet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/khungvuong_color_alpha"
                    android:gravity="center"
                    android:text="Ngày Vào đội"
                    android:textColor="@color/colorWhile"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhile"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Ngày Sinh "/>


                <TextView
                    android:textColor="@color/colorWhile"
                    android:id="@+id/edtNgaySinh_addmemberChiTiet"
                    android:textColorHint="@color/colorWhile"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/khungvuong_color_alpha"
                    android:layout_marginLeft="10dp"
                    android:hint="Nhập Ngày Sinh"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhile"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Địa Chỉ:"/>

                <TextView
                    android:textColor="@color/colorWhile"
                    android:id="@+id/edtDiaChi_addmemberChiTiet"
                    android:textColorHint="@color/colorWhile"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/khungvuong_color_alpha"
                    android:layout_marginLeft="10dp"
                    android:hint="Nhập Địa Chỉ"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhile"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Số Điện Thoại:"/>

                <TextView
                    android:textColor="@color/colorWhile"
                    android:id="@+id/edtSoDienThoai_addmemberChiTiet"
                    android:textColorHint="@color/colorWhile"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/khungvuong_color_alpha"
                    android:layout_marginLeft="10dp"
                    android:hint="Nhập Số Điện Thoại"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhile"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="CMND:"/>

                <TextView
                    android:textColor="@color/colorWhile"
                    android:id="@+id/edtChungMinhNhanDan_addmemberChiTiet"
                    android:textColorHint="@color/colorWhile"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/khungvuong_color_alpha"
                    android:layout_marginLeft="10dp"
                    android:hint="Nhập Số CMND"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>