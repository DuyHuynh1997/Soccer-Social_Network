<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#076088"
    >

    <LinearLayout
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bacgournd_table" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorWhile"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="40dp"
            android:text="@string/txtDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
    <LinearLayout
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:background="@drawable/my_khungvuong_color_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorWhile"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="30dp"
                    android:text="@string/txtWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtEmail_login_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_radiuskhungvuong"
                    android:drawableLeft="@drawable/my_ic_email"
                    android:gravity="center"
                    android:hint="@string/txtEmail"
                    android:paddingLeft="20dp"
                    android:textSize="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtPassword_login_layout"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/my_ic_lock"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:background="@drawable/my_radiuskhungvuong"
                    android:hint="@string/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnSignIn_login_layout"
                    android:textColor="@color/colorWhile"
                    android:background="@drawable/my_radiuskhungvuong_button"
                    android:textSize="30dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txtSignIn"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhile"
                    android:text="@string/txtNotRegistered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnRegisterredNow_login_layout"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/my_radiuskhungvuong_button_two"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhile"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtRegisterredNow"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtForgotPassword_login_layout"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhile"
                    android:text="@string/txtForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>